routine:
- add:
    kind: Pod
    apiVersion: v1
    metadata:
      name: alpine
      labels:
        name: alpine
    spec:
      containers:
      - name: alpine
        image: alpine
      - name: ubuntu
        image: ubuntu
- select: Pod
  jsonpath:
    query: $..containers[?(@.name == 'alpine')].image
    apply: alpine:latest    # apply to image
- select: Pod
  jsonpath:
    query: $..containers[?(@.name == 'ubuntu')]
    exec: !ls |             # execute script with qurey result stored in $.value
      $.value.resources =
        requests:
          memory: "64Mi"
          cpu: "100m"
        limits:
          memory: "128Mi"
          cpu: "200m"

