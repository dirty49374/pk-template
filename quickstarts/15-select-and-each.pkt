routine:
- select: Deployment instance-type=c1
  each: |
    $.object.spec.template.spec.containers[0].resources =
      requests:
        memory: "64Mi"
        cpu: "10m"
      limits:
        memory: "128Mi"
        cpu: "20m"
- select: Deployment instance-type=c2
  each: |
    $.object.spec.template.spec.containers[0].resources =
      requests:
        memory: "64Mi"
        cpu: "100m"
      limits:
        memory: "128Mi"
        cpu: "200m"
